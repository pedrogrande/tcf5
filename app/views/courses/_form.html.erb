<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :tagline %>
    <%= f.input :intro %>
    <%= f.input :description %>
    <%= f.input :image %>
    <%= f.input :price %>
    <%= f.input :icon %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
