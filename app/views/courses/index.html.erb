<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tagline</th>
      <th>Intro</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th>Icon</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.tagline %></td>
        <td><%= course.intro %></td>
        <td><%= course.description %></td>
        <td><%= course.image %></td>
        <td><%= course.price %></td>
        <td><%= course.icon %></td>
        <td><%= course.slug %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

