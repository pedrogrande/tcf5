<%= simple_form_for(@enrolment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :suburb %>
    <%= f.input :state %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :paid %>
    <%= f.input :price %>
    <%= f.input :guid %>
    <%= f.input :stripe_id %>
    <%= f.association :course %>
    <%= f.association :intake %>
    <%= f.association :payment %>
    <%= f.association :special %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
