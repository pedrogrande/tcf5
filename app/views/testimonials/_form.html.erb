<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :quote %>
    <%= f.input :text %>
    <%= f.input :image %>
    <%= f.association :course %>
    <%= f.input :featured %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
