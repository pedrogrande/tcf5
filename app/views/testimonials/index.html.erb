<h1>Listing testimonials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quote</th>
      <th>Text</th>
      <th>Image</th>
      <th>Course</th>
      <th>Featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.name %></td>
        <td><%= testimonial.quote %></td>
        <td><%= testimonial.text %></td>
        <td><%= testimonial.image %></td>
        <td><%= testimonial.course %></td>
        <td><%= testimonial.featured %></td>
        <td><%= link_to 'Show', testimonial %></td>
        <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimonial', new_testimonial_path %>
